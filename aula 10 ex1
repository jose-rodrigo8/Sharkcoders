def ConversãoFahrPCelsius(temperature):
    return ((temperature - 32) * (5/9))

def Temperatura():
    valorTemperatura = float(input("Escreve a temperatura "))

    temperatura = ConversãoFahrPCelsius(valorTemperatura)

    print(f"Temperatura = {temperatura:.2f}ºC")

for i in range(1,70):
    Temperatura()

